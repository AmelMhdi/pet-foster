{
  "name": "pet-foster-connect-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "api/index.js",
  "scripts": {
    "start": "node --env-file=.env api/index.js",
    "build": "mkdir -p api && cp -r src api/ && cp index.js api/server.js && echo 'Build completed'",
    "commit": "navi commit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node index.js",
    "db:create": "node --env-file=.env src/migrations/createTables.js",
    "db:seed": "node --env-file=.env src/migrations/seedDatabase.js",
    "db:reset": "npm run db:create && npm run db:seed",
    "db:testDB": "node --env-file=.env src/migrations/testTable.js"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "bootstrap": "^5.3.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.1",
    "react-router-dom": "^7.5.1",
    "sequelize": "^6.37.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "eslint": "^9.25.1",
    "navicommit": "^1.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}